include ../structure/plugins

+addPlugin("keep-markup")
+addPlugin("match-braces")

mixin docBlock(title="Document")
    doctype html
    html(lang="en")
        head
            meta(charset="UTF-8")
            meta(http-equiv="X-UA-Compatible", content="IE=edge")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            title= title
            link(rel="stylesheet", href="style.css")
            block headBlock
                link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-shades-of-purple.min.css")
                script(src="https://cdn.jsdelivr.net/npm/latex.js/dist/latex.js")
        body
            h1= title
            block
            
            block endBlock
                script(src="./index.js") 
                script(src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.28.0/prism.min.js")
                +renderPlugins